@model IEnumerable<WebApplicationBasic.Models.Album>

    @{ ViewData["Title"] = "Home Page"; }
    <br/>
    <div class="row">
        @if (Model.Count() > 0){ 
            @foreach (var item in Model) {
                <div class="col-md-4 album-art-container">
                    <div class="thumbnail">
                        <p class="">
                            @if (String.IsNullOrWhiteSpace(item.ImageUrl)){
                                <img class="album-art" src="https://static.pexels.com/photos/167092/pexels-photo-167092.jpeg">
                            }
                            else {
                                <img class="album-art" src="@item.ImageUrl"> 
                            }
                        </p>
                        <p>
                            @Html.DisplayFor(modelItem => item.Name)
                        </p>
                        <p>
                            <form asp-controller="Home" asp-action="Remove" method="post" class="form-horizontal" role="form">
                                <input type="hidden" value="@item.AlbumId" name="albumId" id="albumId"/>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <button class="btn btn-danger" type="submit"> <i class="glyphicon glyphicon-trash"></i> Delete </button>
                            </form>
                        </p>
                    </div>
                </div>
            }
        }
        else {
            <p>No Albums found</p>
        }
    </div>